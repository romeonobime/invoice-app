<div {{ attributes }}>
	<div>
		<h1>Invoices</h1>
		<p>There are {{ invoices|length }} total invoices</p>
		<button>Filter by status</button>
		<div>
            <label>
                <input
                    type="checkbox"
                    value="Draft"
                    data-model="statuses[]"
                >
                Draft
            </label>
            <label>
			    <input
                    type="checkbox"
                    value="Pending"
                    data-model="statuses[]"
                >
                Pending
            </label>
            <label>
			    <input
                    type="checkbox"
                    value="Paid"
                    data-model="statuses[]"
                >
                Paid
            </label>
		</div>
		<button>New Invoice</button>
	</div>
    {% if invoices is empty %}
        <div>
		    There is nothing here
            Create an invoice by clicking the New Invoice button and get started
	    </div>
    {% else %}
        <ul>
            {% for invoice in computed.invoices %}
                <li>
                    <article>
                        <h2>{{ invoice.id }}</h2>
                        <p>{{ invoice.paymentDue.format('d M Y') }}</p>
                        <p>{{ invoice.client.name }}</p>
                        <p>Â£ {{ invoice.total|number_format(2) }}</p>
                        <p>{{ invoice.status.name }}</p>
                    </article>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
	<!-- Create new invoice form -->
	<div>
		<button>Go back</button>


		<h2>New Invoice</h2>

		<label>Bill From</label>
		<button>Discard</button>
		<button>Save as Draft</button>
		<button>Save & Send</button>
	</div>
	<!-- Create new invoice end -->
</div>
