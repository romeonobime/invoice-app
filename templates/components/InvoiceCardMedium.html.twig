        <twig:Base:CardTitle>
            <span class="text-neutral-lighter">#</span>{{ invoice.id }}
        </twig:Base:CardTitle>
        <p class="body text-[#858BB2] dark:text-[#FFFFFF] ml-7 mr-12">{{ invoice.clientName }}</p>
