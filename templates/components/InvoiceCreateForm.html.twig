<div {{ attributes }} class="bg-[#FFFFFF] h-screen  w-full max-w-[720px] md:rounded-r-[20px]">
    {{ form_start(form) }}
        <twig:Base:ButtonArrowLeft
            data-action="live#action:prevent"
            data-live-action-param="create"
            data-live-status-id-param="0"
        >
            Go Back
        </twig:Base:ButtonArrowLeft>
        <button
            data-action="live#action:prevent"
            data-live-action-param="create"
            data-live-status-id-param="0"
        >
            Discard
        </button>
        <button
            data-action="live#action:prevent"
            data-live-action-param="create"
            data-live-status-id-param="3"
        >
            Save as Draft
        </button>
        <button
            data-action="live#action:prevent"
            data-live-action-param="create"
            data-live-status-id-param="2"
        >
            Save & Send
        </button>
    {{ form_end(form) }}
</div>
